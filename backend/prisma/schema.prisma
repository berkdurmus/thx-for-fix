generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  githubId      String    @unique
  username      String
  email         String?
  name          String?
  avatarUrl     String?
  accessToken   String
  refreshToken  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  projects      Project[]
  pullRequests  PullRequest[]
  sessions      Session[]
}

model Session {
  id        String   @id @default(uuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
}

model Project {
  id              String   @id @default(uuid())
  userId          String
  repoId          Int
  repoFullName    String
  repoName        String
  defaultBranch   String   @default("main")
  isPrivate       Boolean  @default(false)
  websiteUrl      String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  changes      Change[]
  pullRequests PullRequest[]

  @@unique([userId, repoId])
  @@index([userId])
}

model Change {
  id            String   @id @default(uuid())
  projectId     String
  pullRequestId String?
  type          String   // 'text' | 'style'
  elementTag    String
  xpath         String
  selector      String
  originalValue Json
  modifiedValue Json
  pageUrl       String
  createdAt     DateTime @default(now())

  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  pullRequest PullRequest? @relation(fields: [pullRequestId], references: [id], onDelete: SetNull)

  @@index([projectId])
  @@index([pullRequestId])
}

model PullRequest {
  id           String   @id @default(uuid())
  userId       String
  projectId    String
  prNumber     Int?
  title        String
  description  String?
  status       String   @default("creating") // creating, processing, analyzing, open, closed, merged
  branch       String
  baseBranch   String   @default("main")
  websiteUrl   String
  changesCount Int      @default(0)
  githubUrl    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  project Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  changes Change[]

  @@index([userId])
  @@index([projectId])
}
